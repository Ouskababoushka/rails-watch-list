<h1><%= @list.name %></h1>
<%= link_to "add a movie", new_list_bookmark_path(@list), class: "btn btn-ghost" %>

<% @list.bookmarks.each do |bookmark| %>
  <%=  bookmark.movie.title%>
  <%=  bookmark.comment%>
  <%= link_to 'Destroy', bookmark_path(bookmark), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
